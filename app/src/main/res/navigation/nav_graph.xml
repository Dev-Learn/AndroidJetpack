        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_graph"
        app:startDestination="@id/homeFragment">


    <fragment android:id="@+id/homeFragment"
              android:name="nam.tran.android.helper.view.main.home.HomeFragment"
              android:label="HomeFragment"
              tools:layout="@layout/fragment_home">
        <action android:id="@+id/action_homeFragment_to_detailComicFragment"
                app:destination="@id/detailComicFragment"/>
    </fragment>

    <fragment android:id="@+id/detailComicFragment"
              android:name="nam.tran.android.helper.view.main.detail.DetailComicFragment"
              android:label="DetailComicFragment">
        <argument android:name="comic"/>
    </fragment>
